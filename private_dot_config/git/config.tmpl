[init]
	defaultBranch = main

[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	fsmonitor = true

[push]
	autoSetupRemote = true

[interactive]
	diffFilter = diff-so-fancy --patch

[credential]
	helper = osxkeychain

[ghq]
	root = ~/git/

[include]
	path = ~/.gitconfig.local
