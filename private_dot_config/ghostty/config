# Theme and window settings
theme = "Ayu Mirage"
#background-opacity = 0.84
background-blur-radius = 50
window-width = 240
window-height = 56

# Fonts
font-family = "Mononoki Nerd Font Mono"
font-size = 16.0

# Mouse
mouse-hide-while-typing = true

# SSH setting to fix terminfo on remote machine
shell-integration-features = ssh-terminfo

# Pass opt+left/right through to tmux (unbind word-movement shortcuts)
keybind = opt+left=unbind
keybind = opt+right=unbind
